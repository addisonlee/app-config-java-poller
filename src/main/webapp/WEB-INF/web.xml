<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <context-param>
        <param-name>CONFIG_URL</param-name>
        <param-value>http://localhost:9292/dev/instruments_configuration.json</param-value>
    </context-param>

    <context-param>
        <param-name>CONFIG_USERNAME</param-name>
        <param-value>dev-app</param-value>
    </context-param>

    <context-param>
        <param-name>CONFIG_PASSWORD</param-name>
        <param-value>s3cret1</param-value>
    </context-param>

    <context-param>
        <param-name>CONFIG_TIMEOUT</param-name>
        <param-value>10</param-value>
    </context-param>

    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>
				org.codehaus.jackson.jaxrs;
                com.github.addisonlee.appconfig;
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/data/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
